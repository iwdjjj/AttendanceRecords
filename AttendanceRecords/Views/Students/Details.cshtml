@using Microsoft.AspNetCore.Authorization
@inject IAuthorizationService AuthorizationService
@model AttendanceRecords.Models.Student

@{
    ViewData["Title"] = "Details";
}

<h1>Детали</h1>

<div>
    <h4>Студенты</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Surname)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Surname)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Name)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Midname)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Midname)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Group)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Group.GroupName)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.RecordBook)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.RecordBook)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Mail)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Mail)
        </dd>
    </dl>
</div>
<div>
    @if ((await AuthorizationService.AuthorizeAsync(User, "RequireAdministratorRole")).Succeeded)
    {
        <a asp-action="Edit" asp-route-id="@Model?.StudentId">Редактировать</a>
    }
    <a asp-action="Index">Назад</a>
</div>
